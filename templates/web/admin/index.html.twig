{% extends 'base.html.twig' %}

{% block title %}Hello Admin! | {{ parent() }}{% endblock %}

{% block body %}

    <section class="container">
        <div class="row">
            <div class="col col-12">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Items</th>
                        <th>Buyer</th>
                        <th>Total</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for payment in payments %}
                        <tr>
                            <td>{{ payment.updatedAt|date('F j, Y') }}</td>
                            <td>{{ payment.description|split(';')|join('<br>')|raw }}</td>
                            <td>{{ payment.clientEmail }}</td>
                            <td>{{ (payment.totalAmount / 100)|number_format(2) }}</td>
                            {% if payment.readableStatus == 'captured' %}
                                <td class="bg-success">
                                    <i class="fas fa-check"></i> Paid
                                </td>
                            {% elseif payment.readableStatus == 'canceled' %}
                                <td class="bg-danger">
                                    <i class="fas fa-times"></i> Cancelled
                                </td>
                            {% else %}
                                <td>
                                    {{ payment.readableStatus|title }}
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
